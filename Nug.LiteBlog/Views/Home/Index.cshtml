@model IEnumerable<Posts>
<div class="container-wrap">
    <div class="container">
        <div class="contar-wrap">
            <h4 class="item-title">
                <p><i class="layui-icon layui-icon-speaker"></i>公告：<span>便纵有千种风情，更与何人说。</span></p>
            </h4>
            @{
                foreach (var item in Model)
                {
                    <div class="item">
                        <div class="item-box  layer-photos-demo1 layer-photos-demo">
                            <h3><a href="/post/@item.Url">@item.Title</a></h3>
                            <h5>发布于：<span>@item.Time</span></h5>
                            @{
                                if (item.Type == 1)
                                {
                                    @Html.Raw(item.Summary)
                                }
                                else// Markdown
                                {

                                }
                            }
                            <p><img src="~/static/images/item.png" alt=""></p>
                        </div>
                        @*<div class="comment count">
                                <a href="details.html#comment">评论</a>
                                <a href="javascript:;" class="like">点赞</a>
                            </div>*@
                    </div>
                }
            }
        </div>
        <div class="item-btn">
            <button class="layui-btn layui-btn-normal" type="button" onclick="window.location.href = '@ViewBag.PageUrl'">下一页</button>
        </div>
    </div>
</div>